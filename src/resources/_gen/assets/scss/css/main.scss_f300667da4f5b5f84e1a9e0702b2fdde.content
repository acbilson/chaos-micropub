.dark-switch {
  display: flex;
  flex-flow: row nowrap; }

.switch {
  position: relative;
  display: inline-block;
  width: 40px;
  height: 20px;
  margin-top: 5px; }

.switch-label {
  font-size: 0.8em;
  margin-left: 5px; }

.switch input {
  opacity: 0;
  width: 0;
  height: 0; }

.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--color-primary-offset);
  -webkit-transition: .4s;
  transition: .4s; }

.slider:before {
  position: absolute;
  content: "";
  height: 13.33333333px;
  width: 16px;
  left: 4.8px;
  bottom: 3.33333333px;
  background-color: var(--color-primary);
  -webkit-transition: .4s;
  transition: .4s; }

input:checked + .slider {
  background-color: var(--color-primary-offset); }

input:focus + .slider {
  box-shadow: 0 0 1px var(--color-primary-offset); }

input:checked + .slider:before {
  -webkit-transform: translateX(16px);
  -ms-transform: translateX(16px);
  transform: translateX(16px); }

